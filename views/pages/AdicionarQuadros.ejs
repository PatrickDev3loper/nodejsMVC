<%- contentFor('body') %>
    <%if(typeof isadded != "undefined"){
    if(isadded){%>
        <script>
            notify('success', 'Quadro adicionado com sucesso !')
        </script>
        <%}else{%>
            <script>
                notify('danger', 'Erro ao adicionar quadro !')
            </script>
            <%}}%>
                <div class="animate__animated animate__fadeIn list-quadros">

                    <div class="form-container">
