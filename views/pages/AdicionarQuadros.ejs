                            <div class="input-container animate__animated animate__fadeInLeft">
                                <div class="input-infos"><i class="fi fi-picture"></i></div>
                                <input type="text" name="nome" placeholder="Nome" autocomplete="off">
                            </div>
                            <div class="input-container animate__animated animate__fadeInRight">
                                <div class="input-infos"><i class="fi fi-link"></i></div>
                                <input type="text" name="url" placeholder="Url da imagem" autocomplete="off">
                            </div>

                            <div class="input-container animate__animated animate__fadeInLeft">
                                <div class="input-infos"><i class="fi fi-text-height"></i></div>
                                <input type="number" name="height" placeholder="Altura" autocomplete="off">
                            </div>

                            <div class="input-container animate__animated animate__fadeInRight">
                                <div class="input-infos"><i class="fi fi-text-width"></i></div>
                                <input type="number" name="width" placeholder="Largura" autocomplete="off">
                            </div>

                            <div class="input-container animate__animated animate__fadeInLeft">
                                <div class="input-infos"><i class="fi fi-dollar"></i></div>
                                <input type="number" name="price" placeholder="PreÃ§o" autocomplete="off">
                            </div>

                            <button class="submitBtn animate__animated animate__bounceIn" type="submit"><i class="fi fi-save"></i>&nbsp Salvar</button>
                        </form>
                    </div>
                </div>